<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">Create Account</h4>
      <div class="form-group input-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('email_address'), class: 'form-control' %>
      </div>
      <div class="form-group input-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t('password'), class: 'form-control' %>
      </div>
      <div class="form-group input-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('password_c'), class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    </article>
  </div>

<% end %>

<%= render "devise/shared/links" %>
