<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert alert-danger") if flash[:alert] %>
  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
      <div class="form-group input-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('email_address'), class: 'form-control' %>
      </div>
      <div class="form-group input-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: t('password'), class: 'form-control' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit t('login'), class: 'btn btn-primary btn-block' %>
      </div>
    </article>
  </div>
<% end %>
