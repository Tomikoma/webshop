<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading"><%= t('wishlist')%></h1>
  </div>
</section>

<div class="container mb-4">
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <% if not @products.empty? %>
          <table class="table table-striped">
            <thead>
            <tr>
              <th scope="col"> </th>
              <th scope="col"><%= t('product') %></th>
              <th scope="col" class="text-center"><%= t('price') %></th>
            </tr>
            </thead>
            <tbody>
            <% @products.each do |p| %>
              <tr>
                <td>
                  <%= form_tag(controller: "wishlist", action: "remove_product", :id => p.id, :from => "wl", method: "get", class: "nifty_form") do %>
                    <% submit_tag('X', class: "close", ) %>
                  <% end %>
                </td>
                <td> <%= link_to p.productName, product_path(p) %></td>
                <td class="text-center"> <%= p.price.to_s + " " + t('huf') %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
